<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.notes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name="com.app.notes.ui.EditNoteActivity"
            android:exported="false"
            android:label="@string/title_edit_note_activity" />
        <activity
            android:name="com.app.notes.ui.AddNoteActivity"
            android:exported="false"
            android:label="@string/title_add_note_activity" />
        <activity
            android:name="com.app.notes.ui.ListNotesActivity"
            android:exported="true"
            android:label="@string/title_notes_list_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>